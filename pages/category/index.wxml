<SearchInput></SearchInput>
<view class="cate_container">
  <!-- 左侧菜单 -->
  <!-- 使用scroll-view 具有滚动效果 -->
  <scroll-view scroll-y class="left_menu">
    <view class="menu_item  {{currentindex===index?'active':''}}" wx:for="{{leftMenuList}}" wx:key="cat_id" >{{item.cat_name}}</view>
  </scroll-view>
  <!-- 右侧商品分类内容 -->
  <scroll-view scroll-y class="right_content">
    <view class="goods_group" wx:for="{{rightGoodsList}}" wx:key="item" wx:for-index="index1" wx:for-item="item1">
      <!-- 商品标题 -->
      <view class="goods_title">
        <text class="delimiter">/</text>
        <text class="goods_group_title">{{item1.cat_name}}</text>
        <text class="delimiter">/</text>
      </view>
      <!-- 内容 -->
      <view class="goods_list">
        <navigator wx:for="{{item1.children}}" wx:key="cat_id" wx:for-index="index2" wx:for-item="item2">
          <image mode="widthFix" src="{{item2.cat_icon}}"></image>
          <view class="goods_name">{{item2.cat_name}}</view>
        </navigator>
      </view>
    </view>
    
  </scroll-view>
</view>